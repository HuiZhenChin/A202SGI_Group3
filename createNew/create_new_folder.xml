<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newfolderlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="-30dp"
    android:paddingBottom="20dp"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/container"
        android:layout_width="315dp"
        android:layout_height="275dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ddd">

        <TextView
            android:id="@+id/containerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"

            android:text="Create New Folder"
            android:textColor="#333333"
            android:textSize="26dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/containerInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"

            android:text="Name your folder: "
            android:textColor="#333333"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/newFolderName"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/ddd"
            android:ems="10"
            android:hint="New Folder Name"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="#333333"
            android:textSize="16dp" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="120sp"
            android:layout_height="48sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/ddd"
            android:text="CANCEL"
            android:textColor="@drawable/ddd"
            android:textSize="16sp" />

        <Button
            android:id="@+id/createNewFolderBtn"
            android:layout_width="120sp"
            android:layout_height="48sp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/ddd"
            android:text="CREATE"
            android:textColor="@drawable/ddd"
            android:textSize="16sp" />

    </FrameLayout>

</RelativeLayout>