<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="-10dp"
    android:paddingTop="-30dp"
    android:paddingBottom="20dp"
    tools:context=".MainActivity">

    <!-- Used for Display Task Details -->
    <!-- container -->
    <FrameLayout
        android:id="@+id/detailcontainer"
        android:layout_width="349dp"
        android:layout_height="394dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/container_border">

        <!-- container title -->
        <TextView
            android:id="@+id/containerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/average"
            android:text="Task Details"
            android:textColor="#333333"
            android:textSize="26dp"
            android:textStyle="bold" />

        <!-- task title -->
        <TextView
            android:id="@+id/taskname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/average"
            android:text="Task Title: "
            android:textColor="#333333"
            android:textSize="18dp"
            android:textStyle="bold" />

        <!-- selected task title -->
        <TextView
            android:id="@+id/tasknameview"
            android:layout_width="187dp"
            android:layout_height="52dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/average"
            android:text="Title "
            android:textColor="#333333"
            android:textSize="18dp" />

        <!-- task due -->
        <TextView
            android:id="@+id/taskdue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="140dp"
            android:fontFamily="@font/average"
            android:text="Due Date: "
            android:textColor="#333333"
            android:textSize="18dp"
            android:textStyle="bold" />

        <!-- selected task due -->
        <TextView
            android:id="@+id/taskdueview"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="140dp"
            android:fontFamily="@font/average"
            android:text="Date "
            android:textColor="#333333"
            android:textSize="18dp" />

        <!-- task priority -->
        <TextView
            android:id="@+id/taskpriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/average"
            android:text="Difficulty: "
            android:textColor="#333333"
            android:textSize="18dp"
            android:textStyle="bold" />

        <!-- selected task priority -->
        <TextView
            android:id="@+id/taskpriorityview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/average"
            android:text="Priority "
            android:textColor="#333333"
            android:textSize="18dp" />

        <!-- task notes -->
        <TextView
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="260dp"
            android:fontFamily="@font/average"
            android:text="Notes: "
            android:textColor="#333333"
            android:textSize="18dp"
            android:textStyle="bold" />

        <!-- selected task notes -->
        <TextView
            android:id="@+id/noteview"
            android:layout_width="194dp"
            android:layout_height="76dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="260dp"
            android:fontFamily="@font/average"
            android:text="Notes "
            android:textColor="#333333"
            android:textSize="18dp" />

        <!-- task folder -->
        <TextView
            android:id="@+id/taskfolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="350dp"
            android:fontFamily="@font/average"
            android:text="Saved Folder: "
            android:textColor="#333333"
            android:textSize="18dp"
            android:textStyle="bold" />

        <!-- selected task folder -->
        <TextView
            android:id="@+id/taskfolderview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="350dp"
            android:fontFamily="@font/average"
            android:text="Folder "
            android:textColor="#333333"
            android:textSize="18dp" />

        <!-- exit button -->
        <ImageButton
            android:id="@+id/cancel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/menu_background"
            android:contentDescription="Cancel"
            app:srcCompat="@drawable/baseline_cancel" />


    </FrameLayout>

</RelativeLayout>
