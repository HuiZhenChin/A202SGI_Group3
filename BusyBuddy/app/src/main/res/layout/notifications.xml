<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">

    <!-- Used for FAQ -->
    <!-- Page Title -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/average"
        android:text="Notifications"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="3dp" />

    <!-- message -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="331dp"
        android:layout_height="133dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/tinos"
        android:gravity="left"
        android:justificationMode="inter_word"
        android:text="The notification will be auto-enabled. Below is a sample view of how the notification looks like."
        android:textColor="#000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="189dp"
        android:layout_gravity="center_vertical|end"
        android:lineSpacingExtra="20sp"/>

    <!-- exit button -->
    <ImageButton
        android:id="@+id/imageButton_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="back"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/baseline_cancel_24"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="144dp"
        android:background="@drawable/menu_background"/>

    <androidx.cardview.widget.CardView
        android:layout_width="226dp"
        android:layout_height="355dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp">

        <!-- notification sample view -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="231dp"
            android:layout_height="355dp"
            android:scaleType="fitXY"
            android:src="@drawable/notifications"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>
