<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/busybuddy"
        android:roundIcon="@mipmap/busybuddy_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BusyBuddy"
        tools:targetApi="31">
        <activity
            android:name=".LoginActivity"
            android:label="Busy Buddy"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".NewActivity"></activity>
        <activity android:name=".PriorityList"></activity>
        <activity android:name=".MenuActivity"></activity>
        <activity android:name=".DisplayFolder"></activity>
        <activity android:name=".SignUpActivity"></activity>
        <activity android:name=".MyAccount"></activity>
        <activity android:name=".EditMyAccount"></activity>
        <activity android:name=".FaqMain"></activity>
        <activity android:name=".item_select_about_the_app"></activity>
        <activity android:name=".item_select_contact_us"></activity>
        <activity android:name=".item_select_list_of_features"></activity>
        <activity android:name=".item_select_notifications"></activity>
        <activity android:name=".item_select_task_create"></activity>
        <activity android:name=".item_select_task_delete"></activity>
        <activity android:name=".item_select_task_description"></activity>
        <activity android:name=".ShowNotification"></activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BusyBuddy">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>