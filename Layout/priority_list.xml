<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:paddingLeft="20dp"
    android:paddingTop="40dp"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/menuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-5dp"
        android:background="@drawable/menu_background"
        android:contentDescription="back"
        android:src="@drawable/baseline_format_list_bulleted_24" />


    <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="230dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/searchbar_border"
            android:paddingStart="0dp"
            android:paddingEnd="8dp"
            android:queryHint="Search..."
            app:iconifiedByDefault="false"
            app:queryBackground="@android:color/transparent"
            app:queryHint="Search your tasks..." />


    <ImageButton
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="-5dp"
        android:background="@drawable/menu_background"
        android:contentDescription="add"
        android:src="@drawable/baseline_add_circle_24" />

    <TextView
        android:id="@+id/titleMyTask"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/average"
        android:text="My Tasks"
        android:textColor="#000000"
        android:textSize="24dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="79dp" />

    <ListView
        android:id="@+id/searchList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchView"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FFFFFF"
        android:visibility="invisible" >

    </ListView>

    <TextView
        android:id="@+id/highPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/varela"
        android:text="High Priority"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dueTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/varela"
        android:text="Due"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mediumPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/varela"
        android:text="Medium Priority"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lowPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="450dp"
        android:fontFamily="@font/varela"
        android:text="Low Priority"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/taskTitle"
        android:layout_width="146dp"
        android:layout_height="51dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="170dp"
        android:fontFamily="@font/varela"
        android:text="Title"
        android:textColor="#000000"
        android:textSize="16dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/taskDue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="170dp"
        android:fontFamily="@font/varela"
        android:text="Date"
        android:textColor="#000000"
        android:textSize="16dp"
        android:visibility="invisible"/>

    <Spinner
        android:id="@+id/taskProgress"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="155dp"
        android:background="@drawable/progressdropdown_border"
        android:gravity="center_vertical"
        android:spinnerMode="dropdown"
        android:fontFamily="@font/varela"
        android:visibility="invisible"/>


</RelativeLayout>
