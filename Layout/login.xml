<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:paddingLeft="60dp"
    android:paddingTop="50dp"
    tools:context=".MainActivity">

    <!-- Used for Login Page -->
    <LinearLayout

        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:orientation="vertical" />

    <!-- app logo -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="201dp"
        android:layout_height="171dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:baselineAlignBottom="false"
        app:srcCompat="@drawable/logo" />

    <!-- app name -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/varela"
        android:text="Busy Buddy"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold" />

    <!-- Page Title -->
    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/roboto_bold"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- username input -->
    <EditText
        android:id="@+id/usernameInput"
        android:layout_width="315dp"
        android:layout_height="58dp"
        android:layout_marginLeft="0px"
        android:layout_marginTop="400dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:fontFamily="@font/average"
        android:hint="Username"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColorHighlight="#0FFFFFFF"
        android:textColorHint="#000000"
        android:textSize="14sp" />

    <!-- password input -->
    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="315dp"
        android:layout_height="58dp"
        android:layout_marginTop="470dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:fontFamily="@font/average"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHighlight="#0FFFFFFF"
        android:textColorHint="#000000"
        android:textSize="14sp" />

    <!-- show or hide password icon -->
    <ImageView
        android:id="@+id/show_hide_password"
        android:layout_width="32dp"
        android:layout_height="50dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="475dp"
        android:src="@drawable/hide_icon" />

    <!-- login button -->
    <Button
        android:id="@+id/loginBtn"
        android:layout_width="104sp"
        android:layout_height="48sp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="640dp"
        android:background="@drawable/loginbtn_border"
        android:text="LOGIN"
        android:textColor="@drawable/loginbtn_text_color"
        android:textSize="16sp" />

    <!-- text -->
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="590dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Doesn't have an account?"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <!-- sign up  -->
    <TextView
        android:id="@+id/signUpText"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="590dp"
        android:clickable="true"
        android:fontFamily="@font/roboto_bold"
        android:onClick="openSignUp"
        android:text="@string/signUp"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <!-- forgot password -->
    <TextView
        android:id="@+id/fgtPassword"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="545dp"
        android:fontFamily="@font/roboto_bold"
        android:onClick="reset"
        android:text="@string/password"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />



</RelativeLayout>
